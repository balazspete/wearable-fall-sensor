<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceCallibrationActivity" >

    
    <LinearLayout
        android:id="@+id/instructions_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="10sp" >
        
        <TextView 
            android:id="@+id/mini_instruction_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@android:style/TextAppearance.DeviceDefault.Small"
            android:text="Dummy"
            />
        <TextView 
            android:id="@+id/main_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@android:style/TextAppearance.DeviceDefault.Large"
            android:text="Dummy"
            />
        <TextView 
            android:id="@+id/mini_instruction_below"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@android:style/TextAppearance.DeviceDefault.Small"
            android:text="Dummy"
            />
        
    </LinearLayout>
    
    <ListView
        android:id="@+id/sensor_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/instructions_panel" >
    </ListView>


</RelativeLayout>
